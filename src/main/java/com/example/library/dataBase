CREATE TABLE permission (
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL UNIQUE,
    description VARCHAR(255),
    action SMALLINT NOT NULL DEFAULT 0 CHECK (action IN (-1, 0, 1)),
    createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    createdBy BIGINT,
    updatedBy BIGINT,
    CONSTRAINT fk_permission_createdBy FOREIGN KEY (createdBy) REFERENCES users(id),
    CONSTRAINT fk_permission_updatedBy FOREIGN KEY (updatedBy) REFERENCES users(id)
);